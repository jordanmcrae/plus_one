<h1>Your Friends</h1>



<% if @friendships %>
  <% @friendships.each do |friendship| %>
    <% if friendship.friender == current_user %>
      <a href="<%= user_path(friendship.friendee.id) %>"><p><%= friendship.friendee.full_name %></p></a>
    <% else %>
    <a href="<%= user_path(friendship.friendee.id) %>"><p><%= friendship.friender.full_name %></p></a>
    <% end %>
  <% end %>

<% else %>
    <p> You currently don't have any friends.</p>

<% end %>
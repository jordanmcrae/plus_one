<div class="signup">
  <%= form_for @user do |f|%>
    <% if @user.errors.any? %>
      <div id="error-explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being created: </h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label :bio %>
      <%= f.text_field :bio %>
    </div>

    <div class="field">
      <%= f.label :interests %>
      <%= f.text_field :interests %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>

    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>

    <div class="field">
      <%= f.label :country %>
      <%= f.text_field :country %>
    </div>


    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm Pass" %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="imageupload">
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
    </div>

    <div class="signup-button">
      <%= f.submit %><br>
    </div>
  <% end %>
</div>
<!-- Event details -->
<% if current_user %>
  <%= link_to "Edit", edit_event_path %>
<% end %>
<h2><%= @event.event_name %></h2>

<h4><%= @event.address_1 %></h4>

<h4><%= @event.address_2 %></h4>

<h4><%= @event.city %></h4>

<h4><%= @event.country %></h4>

<h4><%= @event.z_post_code %></h4>

<h4><%= @event.number_of_attendees %></h4>

<h4><%= @event.time %></h4>

<h4><%= @event.description %></h4>

<h4><%= @event.cost %></h4>

<h4><%= @event.image %></h4>

<h4><%= @event.category %></h4>

<div class="map-canvas" data-latitude="<%= @event.latitude.to_f %>" data-longitude="<%= @event.longitude.to_f %>"></div>


<!-- Event reviews -->
<h1>Event Reviews</h1>
  <div class="new-event-review">
     <%= form_for [@event, @event_review], :remote => true do |f| %>
    <div class="comment">
      <h4><%= f.label :comment %></h4>
      <p><%= f.text_field :comment %></p>
    </div>

    <h4>How was your experience?</h4>
    <p>1<%= f.radio_button :star_rating, 1 %></p>
    <p>2<%= f.radio_button :star_rating, 2 %></p>
    <p>3<%= f.radio_button :star_rating, 3, checked: true %></p>
    <p>4<%= f.radio_button :star_rating, 4 %></p>
    <p>5<%= f.radio_button :star_rating, 5 %></p>

    <p>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
</div>

<div class="event-reviews">
  <%= render :partial => "event_review", collection: @event.event_reviews %>
</div>
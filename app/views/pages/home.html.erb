<div class="main">

  <!-- Swipe Card for Logged In User -->
  <% if @randomevent %>
  <div class="swipe-card-wrapper">
    <%= render "randomevent" %>
  </div>

  <% else %>
  <!-- Clear nav on landing page alone -->
    <div class="introduction">

      <div class="welcome-text-box">
        <p class="welcome-text">PlusOne</p>
        <h2 class="welcome-text2">Meet like-minded people around<br>your area.</h2>
      </div>
      <div class="typed">
      <span class="element">Let's </span>
      </div>
      <script>
        $(function(){
            $(".element").typed({
              strings: ["chit chat.", "play soccer.", "have coffee.", "play games", "share experiences.",],
              typeSpeed: 100,
              backSpeed: 100,
              backDelay: 1000
            });
        });
      </script>


      <a href="/users/new"><div class="pulse-button">+</div></a>

    <style>
    #nav {
      display: none;
    }
    .container {
      display: none;
    }
    </style>

    <div id="home-buttons">

      <a href="/login"><p class="sub-line">Already Have an Account?</p></a>
    </div>
<% end %>


<% if current_user %>
  <div class="home-event-wrapper">
    <div class="home-event">
      <% @nearby_events.each do |event| %>
      <div class="home-event-image-background">
        <%= image_tag (event.image_url(:mobile)) %>
      </div>
        <a href="<%= event_path(event) %>">
          <%= event.event_name %></br>
          <%= event.full_street_address %>
        </a>
        <hr>
      <% end %>
    </div>
  </div>
<% end %>


</div>


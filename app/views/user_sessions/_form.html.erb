<div class="registration-wrapper">

  <div class="login">
    <%= form_tag user_sessions_path, method: :post do %>
      <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>
      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <div class="login-button">
        <%= submit_tag 'Submit' %>
      </div>
    <% end %>
  </div>
</div>